        <SolidColorBrush
            x:Key="SystemChromeHighColor"
            Color="{ThemeResource SystemChromeHighColor}" />
        <SolidColorBrush
            x:Key="SystemChromeLowColor"
            Color="{ThemeResource SystemChromeLowColor}" />
        <SolidColorBrush
            x:Key="SystemChromeMediumColor"
            Color="{ThemeResource SystemChromeMediumColor}" />
        <SolidColorBrush
            x:Key="SystemChromeMediumLowColor"
            Color="{ThemeResource SystemChromeMediumLowColor}" />
        <SolidColorBrush
