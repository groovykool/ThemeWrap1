            x:Key="SystemListAccentMediumColor"
            Color="{ThemeResource SystemListAccentMediumColor}" />
        <SolidColorBrush
            x:Key="SystemListAccentHighColor"
            Color="{ThemeResource SystemListAccentHighColor}" />
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="400" />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid
            Grid.Column="0">
            <StackPanel
                Orientation="Vertical">
                <ComboBox
                    x:Name="CB1"
                    Header="Select Wrap Theme"
                    Margin="20"
                    SelectedIndex="0"
                    SelectionChanged="CB1_SelectionChanged">
                    <x:String>Default</x:String>
                    <x:String>Light</x:String>
                    <x:String>Dark</x:String>
                </ComboBox>
                <Button
                    x:Name="AddBTN"
                    Margin="20"
                    Content="Add TextBox"
                    Click="AddBTN_Click" />
                <ComboBox
                    x:Name="CB2"
                    Header="Select BackGround Brush"
                    Margin="20"
                    SelectedIndex="0"
                    SelectionChanged="CB2_SelectionChanged">
                    <x:String>SystemAltHighColor</x:String>
                    <x:String>SystemAltLowColor</x:String>
                    <x:String>SystemAltMediumColor</x:String>
                    <x:String>SystemAltMediumHighColor</x:String>
                    <x:String>SystemAltMediumLowColor</x:String>
                    <x:String>SystemBaseHighColor</x:String>
                    <x:String>SystemBaseLowColor</x:String>
                    <x:String>SystemBaseMediumColor</x:String>
                    <x:String>SystemBaseMediumHighColor</x:String>
                    <x:String>SystemBaseMediumLowColor</x:String>
                    <x:String>SystemChromeAltLowColor</x:String>
                    <x:String>SystemChromeBlackHighColor</x:String>
                    <x:String>SystemChromeBlackLowColor</x:String>
                    <x:String>SystemChromeBlackMediumLowColor</x:String>
                    <x:String>SystemChromeBlackMediumColor</x:String>
                    <x:String>SystemChromeDisabledHighColor</x:String>
                    <x:String>SystemChromeDisabledLowColor</x:String>
                    <x:String>SystemChromeHighColor</x:String>
                    <x:String>SystemChromeLowColor</x:String>
                    <x:String>SystemChromeMediumColor</x:String>
                    <x:String>SystemChromeMediumLowColor</x:String>
                    <x:String>SystemChromeWhiteColor</x:String>
                    <x:String>SystemChromeGrayColor</x:String>
                    <x:String>SystemListLowColor</x:String>
                    <x:String>SystemListMediumColor</x:String>
                    <x:String>SystemErrorTextColor</x:String>
                    <x:String>SystemChromeAltMediumHighColor</x:String>
                    <x:String>SystemChromeAltHighColor</x:String>
                    <x:String>SystemRevealAltHighColor</x:String>
                    <x:String>SystemRevealAltLowColor</x:String>
                    <x:String>SystemRevealAltMediumColor</x:String>
                    <x:String>SystemRevealAltMediumHighColor</x:String>
                    <x:String>SystemRevealAltMediumLowColor</x:String>
                    <x:String>SystemRevealBaseHighColor</x:String>
                    <x:String>SystemRevealBaseLowColor</x:String>
                    <x:String>SystemRevealBaseMediumColor</x:String>
                    <x:String>SystemRevealBaseMediumHighColor</x:String>
                    <x:String>SystemRevealBaseMediumLowColor</x:String>
                    <x:String>SystemRevealChromeAltLowColor</x:String>
                    <x:String>SystemRevealChromeBlackHighColor</x:String>
                    <x:String>SystemRevealChromeBlackLowColor</x:String>
                    <x:String>SystemRevealChromeBlackMediumLowColor</x:String>
                    <x:String>SystemRevealChromeBlackMediumColor</x:String>
                    <x:String>SystemRevealChromeHighColor</x:String>
                    <x:String>SystemRevealChromeLowColor</x:String>
                    <x:String>SystemRevealChromeMediumColor</x:String>
                    <x:String>SystemRevealChromeMediumLowColor</x:String>
                    <x:String>SystemRevealChromeWhiteColor</x:String>
                    <x:String>SystemRevealChromeGrayColor</x:String>
                    <x:String>SystemRevealListLowColor</x:String>
                    <x:String>SystemRevealListMediumColor</x:String>
                    <x:String>SystemAccentColor</x:String>
                    <x:String>SystemListAccentLowColor</x:String>
                    <x:String>SystemListAccentMediumColor</x:String>
                    <x:String>SystemListAccentHighColor</x:String>
                    
                </ComboBox>
            </StackPanel>
        </Grid>
        <local:Wrap
            x:Name="ApplyTheme"
            Grid.Column="1"
            Margin="4">
            <Grid
                x:Name="MainGrid"
                Background="{ThemeResource SystemAltHighColor}"
                BorderBrush="{ThemeResource SystemBaseHighColor}"
                BorderThickness="4">
                <StackPanel
                    x:Name="StackP"
                    Orientation="Vertical">
                    <TextBlock
                        FontSize="20"
                        FontWeight="ExtraBold"
                        TextWrapping="Wrap"
                        Margin="12"
                        Text="This is some Text" />
                    <Button
                        Margin="12"
                        Content="Press Me" />
                </StackPanel>
            </Grid>
            <TextBox
                x:Name="Box"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Left"
                Header="Enter Text"
                Margin="12"
                Width="200"></TextBox>
        </local:Wrap>
        <local:Wrap
            x:Name="ApplyTheme2"
            Grid.Column="2"
            Margin="4">
            <StackPanel
                x:Name="StackP2"
                Orientation="Vertical"
                Background="{ThemeResource SystemListAccentLowColor}"
                BorderBrush="{ThemeResource SystemBaseMediumColor}"
                BorderThickness="4">
                <TextBlock
                    FontSize="20"
                    FontWeight="ExtraBold"
                    TextWrapping="Wrap"
                    Margin="12"
                    Text="This is some Text" />
                <Button
                    Margin="12"
                    Content="Press Me" />
            </StackPanel>
        </local:Wrap>
    </Grid>
</Page>
