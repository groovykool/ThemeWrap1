            Color="{ThemeResource SystemChromeAltHighColor}" />
        <SolidColorBrush
            x:Key="SystemRevealAltHighColor"
            Color="{ThemeResource SystemRevealAltHighColor}" />
        <SolidColorBrush
            x:Key="SystemRevealAltLowColor"
